{
  "name": "cerebro",
  "version": "0.0.1",
  "description": "Distributed connector for flux nodes",
  "main": "index.js",
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=6.0.0"
  },
  "reveal": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "scalability",
    "concurrency",
    "distributed-systems",
    "leader-election",
    "partitioning",
    "utility",
    "library",
    "standard",
    "javascript",
    "javascript-library",
    "cluster",
    "election",
    "replicas",
    "distributed-lock",
    "fault-tolerance",
    "ring"
  ],
  "scripts": {
    "start": "node start.js",
    "build": "npm install",
    "test": "standard && export NODE_ENV=dev && nyc --check-coverage --lines 99 --reporter=text mocha --exit --timeout 10000 **/*test.js",
    "testsingle": "standard && export NODE_ENV=dev && nyc --check-coverage --lines 99 --reporter=text mocha --exit --timeout 10000 test/dave.test.js",
    "test-debug": "standard && export NODE_ENV=dev && mocha --exit --inspect-brk --timeout 10000 **/*test.js",
    "integration-test": "nyc mocha --exit --timeout 300000 **/*/integration/*.js",
    "integration-test-debug": "mocha --inspect-brk --exit --timeout 300000 **/*/integration/*.js",
    "demontest": "nodemon --exec \"npm test\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "standard": "npx standard",
    "standard-verbose": "npx standard --verbose",
    "lint": "npx standard --fix"
  },
  "author": "pioardi",
  "license": "MIT",
  "nyc": {
    "exclude": [
      "**/follower.js",
      "**/leader.js"
    ]
  },
  "standard": {
    "env": [
      "mocha",
      "node"
    ],
    "parser": "babel-eslint"
  },
  "dependencies": {
    "@reactivex/rxjs": "^5.5.11",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dedent-js": "^1.0.1",
    "default-gateway": "^6.0.3",
    "express": "^4.16.4",
    "ioredis": "^5.2.2",
    "ntp-time": "git@github.com:MorningLightMountain713/node-ntp-sync.git",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "coveralls": "^3.0.3",
    "expect": "^26.0.0",
    "lodash": "^4.17.11",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mock-require": "^3.0.3",
    "nyc": "^15.0.0",
    "request": "2.88.2",
    "standard": "^16.0.1",
    "supertest": "^6.0.0"
  }
}
